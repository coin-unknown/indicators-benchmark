{
    "compilerOptions": {
      "target": "es5",
      "moduleResolution": "node",
      "lib": ["ESNext"],
      "skipLibCheck": true,
      "module": "commonjs",
      "allowJs": true,
      "outDir": "./lib",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "isolatedModules": true,
      "allowSyntheticDefaultImports": true,
      "declaration": true,
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": ["node_modules"],
}
